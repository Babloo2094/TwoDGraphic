        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtMessage" Height="23" HorizontalAlignment="Left" Margin="141,86,0,0" VerticalAlignment="Top" Width="120" TextChanged="txtMessage_TextChanged"/>
        <Label Content="{Binding Text,ElementName=txtMessage}" Visibility="Visible" Height="28" HorizontalAlignment="Left" Margin="173,160,0,0" Name="lable1" VerticalAlignment="Center"/>

    </Grid>
</Window>

<Window x:Class="TwoDGraphics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoDGraphics"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel Name="dc1">
            <Ellipse Width="300" Height="200" Name="sample">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Offset="0" Color="Red"/>
                        <GradientStop Offset="1" Color="Blue"/>
                        <GradientStop Offset="2" Color="Yellow"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Path Stroke="Black" StrokeThickness="1" Data="M 20,120 A 100,56 42 1 0 200,140" Width="297"/>
        </DockPanel>
    </Grid>
</Window>
